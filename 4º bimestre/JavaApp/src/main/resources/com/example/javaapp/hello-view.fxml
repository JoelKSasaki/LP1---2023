<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="460.0" prefWidth="474.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaapp.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TableView fx:id="tabela" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="33.0" text="id" />
          <TableColumn fx:id="colNome" prefWidth="307.0" text="nome" />
            <TableColumn fx:id="colIdade" prefWidth="93.0" text="idade" />
        </columns>
      </TableView>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Nome" />
            <TextField fx:id="txtNome" />
            <Label layoutX="10.0" layoutY="10.0" text="Idade" />
            <TextField fx:id="txtIdade" layoutX="10.0" layoutY="28.0" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button mnemonicParsing="false" onAction="#salvar" text="Adicionar" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                <Button mnemonicParsing="false" text="Button" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</VBox>
